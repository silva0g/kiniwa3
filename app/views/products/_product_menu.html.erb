<ul class="sidebar-list">
  <li class="sidebar-item">
    <%= link_to "Nom du product", listing_product_path, class: "sidebar-link active" %>
    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
  </li>
  <li class="sidebar-item">
    <%= link_to "Prix", pricing_product_path, class: "sidebar-link active" %>
    <% if !@product.price.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Description", description_product_path, class: "sidebar-link active" %>
    <% if !@product.listing_name.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Photos", photo_upload_product_path, class: "sidebar-link active" %>
    <% if !@product.photos.blank? %>
      <span id="photo_check" class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
</ul>
<hr/>

<% is_ready = !@product.active && !@product.price.blank? && !@product.listing_name.blank? && !@product.photos.blank? %>

<%= form_for @product do |f| %>
  <%= f.hidden_field :active, value: true %>
  <%= f.submit "ENREGISTRER", id: "publish_button", class: "btn btn-normal btn-block", disabled: !is_ready %>
<% end %>
