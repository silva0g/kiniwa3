<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">MessagÃ©rie</div>
			<div class="panel-body">
				<div class="container">
					<%= @conversations.each do |conversation| %>
						<% other = current_user == conversation.sender ? conversation.recepient : conversation.sender %>
						<%= link_to conversation_messages_path(conversation) do %>
							
							<div class="row">
								<% if conversation.messages.any? %>
									<div class="col-md-4">
										<%= image_tag avatar_url(other), class: "img-circle avatar-medium" %>
									</div>
									<div class="col-md-4">
										<%= other.fullname %>
										<%= conversation.messages.last.message_time %>
									</div>

									<div class="col-md-4">
										<%= conversation.messages.last.context %>
									</div>
								<% end %>
							</div>
							
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>