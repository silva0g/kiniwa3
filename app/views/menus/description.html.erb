<div class="row">
	<div class="col-md-3">
		<%= render 'menu_menu' %>
	</div>

	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading text-center">
				Descriptions du menu (Entrée + Plat + Désert)
			</div>

			<div class="panel-body">
				<div class="container">

					<%= form_for @menu do |f| %>
						<div class="row">
							<label>Listing name</label>
							<%= f.text_field :listing_name, placeholder: "Bavette de poulet façon andalou", class: "form-control", required: true %>
						</div>

						<div class="row">
							<label>
								Description du plat principal
							</label>
							<%= f.text_area :summary, rows: 5, placeholder: "Bavette de poulet façon andalou avec son riz perdu, baby carotte et sauce de...", class: "form-control", required: true  %>
						</div>
						<br/>

						<div class="text-center">
							<%= f.submit "ENREGISTRER", class: "btn btn-form"%>
						</div>
					<% end %>
					
					
				</div>
			</div>
		</div>
	</div>
</div>

