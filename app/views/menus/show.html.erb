<div class="row">
	<!-- PANEAU GAUCHE -- >
	<div class="col-md-8">

		<!-- Nom du menu -->
		<div class="row">
			<h4 class="text-babu text-center">----------------------  COMPLETEZ VOTRE MENU  -----------------------</h4><br/>
				
				<div class="col-md-4">
					
					<%= image_tag "boissons1.png" %>
				</div>
					
				<div class="col-md-4">
					
					<%= image_tag "boissons2.png" %>
				</div>

